<h1 class="page-title text-center my-4">Quản lý sản phẩm</h1>
<div class="container">
  <div class="admin-actions mb-3 text-end">
    <a href="/admin/add" class="btn btn-primary">Thêm sản phẩm mới</a>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered align-middle">
      <thead class="table-primary text-center">
        <tr>
          <th>#</th>
          <th>Tên sản phẩm</th>
          <th>Slug</th>
          <th>Ảnh</th>
          <th>Mô tả</th>
          <th>Giá</th>
          <th>Số lượng</th>
          <th>Danh mục</th>
          <th>Hành động</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <td class="text-center">{{@index}}</td>
          <td>{{this.name}}</td>
          <td>{{this.slug}}</td>
          <td>
            <img src="/uploads/{{this.image}}" alt="{{this.name}}" style="width: 50px; height: auto; object-fit: cover; border-radius: 5px;">
          </td>
          <td class="product-description text-truncate" style="max-width: 200px;" title="{{this.description}}">
            {{this.description}}
          </td>
          <td class="text-end">${{this.price}}</td>
          <td class="text-center">{{this.quantity}}</td>
          <td class="text-center">{{this.category_id}}</td>
          <td class="text-center">
            <a href="/admin/products/edit/{{this.slug}}" class="btn btn-warning btn-sm me-1">Sửa</a>
            <a href="/admin/products/delete/{{this.slug}}" class="btn btn-danger btn-sm">Xóa</a>
          </td>
        </tr>
        {{else}}
        <tr>
          <td colspan="9" class="text-center">Không có sản phẩm nào!</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

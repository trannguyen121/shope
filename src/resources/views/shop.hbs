<section id="product1" class="section-p1">
    <h2>Shop Our Products</h2>
    <p>Find your favorite products below!</p>
    <div class="prod-cont">
        {{#each products}}
        <div class="prod" onclick="window.location.href='/sproduct/{{this.slug}}';">
            <img src="/uploads/{{this.image}}" alt="{{this.name}}">
            <div class="des">
                <span>{{this.brand}}</span>
                <h5>{{this.name}}</h5>
                <div class="star">
                    {{#times this.rating}}
                    <i class="fas fa-star"></i>
                    {{/times}}
                </div>
                <h4>${{this.price}}</h4>
            </div>
            <a href="/cart/add/{{this.slug}}"><i class="fa-solid fa-cart-shopping cart"></i></a>
        </div>
        {{else}}
        <p class="text-center">No products found!</p>
        {{/each}}
    </div>
</section>

<section id="pagination" class="section-p1">
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            {{#if pagination.prev}}
            <li class="page-item">
                <a class="page-link" href="?page={{pagination.prev}}" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {{/if}}

            {{#each pagination.pages}}
            <li class="page-item {{#if ../pagination.current}}{{isActive ../pagination.current this}}{{/if}}">
                <a class="page-link" href="?page={{this}}">{{this}}</a>
            </li>
            {{/each}}

            {{#if pagination.next}}
            <li class="page-item">
                <a class="page-link" href="?page={{pagination.next}}" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
            {{/if}}
        </ul>
    </nav>
</section>

<section id="newsletter" class="section-p1 section-m1">
    <div class="newstext">
        <h4>Sign Up For Newsletters</h4>
        <p>Get E-mail updates about our latest shop and <span>special offers</span></p>
    </div>
    <div class="form">
        <input type="text" placeholder="Your email address">
        <button class="normal">Sign up</button>
    </div>
</section>
